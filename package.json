{
  "name": "easy-a2a",
  "version": "0.0.4",
  "description": "An easy to use library for building Agent2Agent (A2A) agents backed by OpenAI APIs.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "rootDir": ".",
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "rebuild": "rimraf dist node_modules/ package-lock.json && npm i && npm run build",
    "prepublishOnly": "npm run rebuild && npm test",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "keywords": [
    "agent2agent",
    "a2a",
    "ai",
    "agent"
  ],
  "author": "artinet",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/the-artinet-project/easy-a2a"
  },
  "bugs": {
    "url": "https://github.com/the-artinet-project/easy-a2a/issues"
  },
  "homepage": "https://artinet.io",
  "dependencies": {
    "@a2a-js/sdk": "^0.3.4",
    "@artinet/sdk": "^0.5.18",
    "@artinet/agent-relay": "^0.0.6",
    "@artinet/types": "^0.0.5",
    "openai": "^6.8.1",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.4",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.31.0"
  },
  "engines": {
    "node": ">=18.9.1"
  }
}
